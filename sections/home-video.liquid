<div class="custom-video">
  <div class="wrapp_video container">
    <div class="img-left item-video">
      {{section.settings.embed-video}}
      <img class="video-arrow" src="{{ 'Arrow-Text_Overlay.png' | asset_img_url: '200x' }}"/>
    </div>
    <div class="container-video  item-video">
      <div class="caption-video text_contr_v">
        <h3 class="title-section v_home_t">{{ section.settings.section_title | escape }}</h3>
        <p class="vide_text">{{ section.settings.section_subtitle | escape }}</p>
