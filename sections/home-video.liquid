          <img class="lazyload" src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==" data-src="https://cdn.shopify.com/s/files/1/0797/4383/files/icon-pl-home.png?2164">Play Video(1<span class="a-m">m</span>2<span class="a-8">8</span><span class="a-m">s</span>)
        </a> -->
      </div>
    </div>
  </div>
</div>

<style>
  .custom-video .wrapp_video .caption-video h3.title-section{
    color: {{section.settings.heading_color}};
  }
</style>

{% schema %}
  {
    "name": "Home Video",
    "class": "index-section index-custom-video",
    "settings": [
	{
      "type": "text",
      "id": "section_title",
      "label": "Heading"
    },
	{
        "type": "color",
        "id": "heading_color",
        "label": "Heading Color",
        "default": "#04b5ad"
    },
   {
      "type": "textarea",
      "id": "section_subtitle",
      "label": "Sub Heading"
    },
    {
      "type": "image_picker",
      "id": "image_bg_link",
      "label": "Bg image"
    },
    {
      "type": "textarea",
      "id": "embed-video",
      "label": "Embed Video"
    }
    ],
	"presets": [
      {
        "name": "Home Video",
        "category": "Custom"
      }
    ]
  }
{% endschema %}

