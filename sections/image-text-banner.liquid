            "label": "Button link"
          },
          {
            "type": "checkbox",
            "id": "enable_video",
            "label": "Show Video",
            "default": false
          },
          {
            "type": "textarea",
            "id": "video_overlay",
            "label": "Video Embed Code"
          },

      
        {
          "type": "image_picker",
          "id": "image2",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Your headline"
        },
        {
          "type": "richtext",
